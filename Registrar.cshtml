@{
    ViewData["Title"] = "Registrar Usuário";
}
<h2 class="mb-4">Registrar Usuário</h2>
<form asp-action="Registrar" method="post" class="w-100 w-md-50 mx-auto p-4 border rounded bg-light">
    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input type="text" name="nome" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Login</label>
        <input type="text" name="login" class="form-control" required />
        @Html.ValidationMessage("Login", null, new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        <label class="form-label">Senha</label>
        <input type="password" name="senha" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Registrar</button>
</form>
@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-info mt-3">@TempData["Mensagem"]</div>
}
