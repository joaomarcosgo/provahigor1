<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProvaHigorr</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProvaHigorr.styles.css" asp-append-version="true" />
    <style>
        body { background: #f8fafc; }
        .navbar { background: linear-gradient(90deg, #007bff 0%, #00c6ff 100%); }
        .navbar .navbar-brand, .navbar .nav-link { color: #fff !important; }
        .navbar .nav-link.active { font-weight: bold; }
        .table th, .table td { vertical-align: middle; }
        .btn { min-width: 90px; }
        .form-label { font-weight: 500; }
        .rounded { border-radius: 0.5rem !important; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-store fa-lg"></i> ProvaHigorr
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Cliente" asp-action="Index">Clientes</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("UsuarioId") != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-white"><i class="fa-solid fa-user"></i> Olá, @Context.Session.GetString("UsuarioNome")</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Perfil" asp-action="Editar"><i class="fa-solid fa-user-gear"></i> Meu Perfil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Usuario" asp-action="Logout"><i class="fa-solid fa-right-from-bracket"></i> Sair</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Usuario" asp-action="Login"><i class="fa-solid fa-right-to-bracket"></i> Entrar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Usuario" asp-action="Registrar"><i class="fa-solid fa-user-plus"></i> Registrar</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-white py-3 mt-5 shadow-sm">
        <div class="container text-center">
            <span class="fw-bold">&copy; 2025 - ProvaHigorr</span> <span class="text-secondary">| Desenvolvido por <i class="fa-solid fa-code"></i> João Marcos</span>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/js/all.min.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
